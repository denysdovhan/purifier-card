{
  "name": "purifier-card",
  "version": "2.0.0",
  "description": "Air Purifier card for Home Assistant Lovelace UI",
  "main": "dist/purifier-card.js",
  "scripts": {
    "start": "rollup -c --watch",
    "compile": "rollup -c",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write .",
    "build": "npm run lint && npm run compile"
  },
  "keywords": [
    "home-assistant",
    "homeassistant",
    "hass",
    "automation",
    "lovelace",
    "custom-cards",
    "purifier"
  ],
  "author": "Denys Dovhan <denysdovhan@gmail.com> (http://denysdovhan.com/)",
  "license": "MIT",
  "dependencies": {
    "custom-card-helpers": "^1.6.4",
    "lit-element": "^2.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@rollup/plugin-babel": "^5.0.0",
    "@rollup/plugin-commonjs": "^11.1.0",
    "@rollup/plugin-image": "^2.0.4",
    "@rollup/plugin-json": "^4.0.3",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@semantic-release/git": "^9.0.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "prettier": "^2.0.5",
    "rollup": "^2.7.6",
    "rollup-plugin-serve": "^1.0.1",
    "rollup-plugin-terser": "^7.0.2",
    "semantic-release": "^17.3.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "*": "prettier --write"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "dist/purifier-card.js",
              "label": "purifier-card.js"
            }
          ]
        }
      ],
      "@semantic-release/git"
    ]
  }
}
