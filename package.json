{
  "name": "purifier-card",
  "version": "2.2.4",
  "description": "Air Purifier card for Home Assistant Lovelace UI",
  "main": "dist/purifier-card.js",
  "scripts": {
    "start": "rollup -c --watch",
    "compile": "rollup -c",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write .",
    "build": "npm run lint && npm run compile",
    "prepare": "husky install"
  },
  "keywords": [
    "home-assistant",
    "homeassistant",
    "hass",
    "automation",
    "lovelace",
    "custom-cards",
    "purifier"
  ],
  "author": "Denys Dovhan <denysdovhan@gmail.com> (http://denysdovhan.com/)",
  "license": "MIT",
  "dependencies": {
    "custom-card-helpers": "^1.6.4",
    "ha-template": "^1.0.5",
    "lit": "^2.2.2"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@rollup/plugin-babel": "^5.0.0",
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-image": "^2.0.4",
    "@rollup/plugin-json": "^4.0.3",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@semantic-release/git": "^10.0.1",
    "core-js": "^3.25.5",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.20.2",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.0",
    "postcss": "^8.4.18",
    "postcss-preset-env": "^7.4.3",
    "prettier": "^2.0.5",
    "rollup": "^2.7.6",
    "rollup-plugin-minify-html-literals": "^1.2.6",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-postcss-lit": "^2.0.0",
    "rollup-plugin-serve": "^2.0.1",
    "rollup-plugin-terser": "^7.0.2",
    "semantic-release": "^19.0.2"
  },
  "browserslist": [
    "last 2 versions",
    "not dead"
  ],
  "lint-staged": {
    "*.js": "eslint --fix",
    "**/*": "prettier --write --ignore-unknown"
  },
  "prettier": {
    "singleQuote": true
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "dist/purifier-card.js",
              "label": "purifier-card.js"
            }
          ]
        }
      ],
      "@semantic-release/git"
    ]
  }
}
